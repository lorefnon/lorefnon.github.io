head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="/css/blog.css")
    - let title = "Lorefnon | Blog"
    -
      try {
          if (page.title) title += " | " + page.title
      } catch (e) {}
    title= title
    - let description ="Ramblings on Web Development and software architecture"
    -
      try {
          if (page.excerpt) description = page.excerpt
      } catch (e) {}
    meta(property="og:title", content=title)
    meta(property="og:description", content=description)
    link(rel="apple-touch-icon" sizes="180x180" href="/images/favicon/apple-touch-icon.png")
    link(rel="icon" type="image/png" sizes="32x32" href="/images/favicon/favicon-32x32.png")
    link(rel="icon" type="image/png" sizes="16x16" href="/images/favicon/favicon-16x16.png")
    link(rel="icon" href="/images/favicon/favicon.ico")
    include _blog_analytics.pug
    script(src="https://unpkg.com/htmx.org@1.7.0/dist/htmx.min.js" defer)
    script(src="https://unpkg.com/dompurify@2.3.6/dist/purify.min.js" defer)
    script(src="/js/blog.js" defer)

